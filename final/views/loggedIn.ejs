                <% for(var i=0; i<students.length; i++){%>
                    <div class="card col-xs-4">
                        <h4 class="card-title"> <%= students[i].username %></h4>
                         <img src = <%=students[i].profile_pic %>
	                         alt = "problem loading your profile picture" 
                            height="40" width="40"
                                />  
                        <a href="viewProfile?name=<%= students[i].username %>" class="btn btn-primary card-link">go there</a>
                    </div>
                <% } %>
            </div>
        </div>
   <ul class="pager">
